<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneFragment"
    >


    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Authentication by Phone"
        android:textSize="@dimen/_25ssp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_10sdp"
        android:inputType="phone"
        android:layout_below="@id/txt_welcome"
        />

    <Button
        android:id="@+id/btn_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ابعت الكود"
        android:textSize="@dimen/_23ssp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"
        android:layout_below="@id/edit_phone"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/edit_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Verification"
        android:textColorHint="@color/black"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_10sdp"
        android:inputType="number"
        android:layout_below="@id/btn_code"
        />

    <Button
        android:id="@+id/btn_save_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="حفظ"
        android:textSize="@dimen/_23ssp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"
        android:layout_below="@id/edit_verification"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_logout_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إعمل تسجيل خروج"
        android:textSize="@dimen/_23ssp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>